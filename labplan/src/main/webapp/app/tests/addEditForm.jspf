<form class="test-form" method="post">
	<div class="three-columns">
		<div class="row">
			<label for="name">Name</label> <input type="text"
				name="name" value="${name}" class="fill" />
		</div>
		
		<div class="row">
			<label for="value_min">Minimum value</label>

			<div class="has-unit" data-unit="decimal">
				<input type="number" name="value_min" value="${value_min}" step="0.01" class="fill" />
			</div>
		</div>

		<div class="row">
			<label for="height">Maximum value</label>

			<div class="has-unit" data-unit="decimal">
				<input type="number" name="value_max" value="${value_max}" step="0.01" class="fill" />
			</div>
		</div>
	</div>
	
	<div class="row">
		<label for="description">Description</label> <input type="text"
			name="description" value="${description}" class="fill" />
	</div>

	<div class="row actions">
		<input type="submit" value="${is_new ? 'Create' : 'Update' }" />
	</div>
</form>